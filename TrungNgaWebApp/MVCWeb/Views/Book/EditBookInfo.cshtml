
<div class="modal fade" id="edit-bookinfo-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" @* data-backdrop="static"*@>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-title">Thông tin đặt ghế</h4>
            </div>
            <div class="modal-body" id="modal-body">
                @using (Ajax.BeginForm("EditBookInfo", "Book", new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST",
                    OnBegin = "customerEditBegin",
                    OnSuccess = "customerEditCallBack"
                }, new { id = "frmCustomerEdit" }))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Tên khách hàng</label>
                                
                            </div>
                        </div>
                    </div>
                }
                <div id="edit-content" class="notification-container"></div>
            </div>
            <div class="modal-footer">
                <div class="col-md-2">
                    <img src="/Content/images/ajax-loader-3.gif" class="edit-loader" style="display: none" id="edit-loader" />
                </div>
                <div class="col-md-6"></div>
                @*<div class="col-md-2">
                        <button type="button" class="btn btn-block btn-danger" id="btnDelete" style="display: none">Xóa</button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-block btn-success" id="btnResetEditForm">Tạo mới</button>
                    </div>*@
                <div class="col-md-4">
                    <button type="button" class="btn btn-block btn-primary" id="btnSave">Lưu lại</button>
                </div>
            </div>
        </div>
    </div>
</div>