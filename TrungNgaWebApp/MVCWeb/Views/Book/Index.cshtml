@using MVCWeb.Core.Enums
@model MVCWeb.Models.BookIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="row control-panel">
    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            @Html.DropDownListFor(m => m.TransportDirectionId, Model.TransportDirectionItems, new { @class = "form-control", @onchange = "$(this.form).submit();" })
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="btnPrevDate">&laquo;</button>
                </span>
                <input type="text" class="form-control datepicker-control" id="txtRunDateTemp" readonly="readonly">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="btnNextDate">&raquo;</button>
                </span>
            </div>
            @Html.HiddenFor(o => o.LatestDateHavingTransport, new { @id = "hdnLatestDateHavingTransport" })
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            @Html.DropDownListFor(m => m.TransportId, Model.TransportItems, new { @class = "form-control", @onchange = "$(this.form).submit();" })
        </div>
    </div>
    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
        <div class="control-group">
            <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-print"></span> In phơi</button> 
            <button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-refresh"></span> Làm mới</button> 
            <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-list"></span> Đón trả</button> 
            <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-list-alt"></span> Trung chuyển</button>
        </div>
        
    </div>
</div>
<div class="row">
    <div class="bs-callout bs-callout-warning">
        <h4>Loại xe giường nằm 40 chỗ</h4>
        <p>
            Tài xế: <strong class="text-primary">Thành</strong> - Lơ xe: <strong class="text-primary">Hiếu</strong>
        </p>
    </div>
</div>
<div>
    <div class="coach-left pl0">
        @foreach (var seat in Model.LeftSeatWithBookInfos)
        {
            @Html.Partial("_SeatBlock", seat)
        }
    </div>
    <div class="coach-right pr0">
        @foreach (var seat in Model.RightSeatWithBookInfos)
        {
            @Html.Partial("_SeatBlock", seat)
        }
    </div>
    <div class="clearfix"></div>
</div>

@section OptionalCss
{
    @Styles.Render("~/bundles/bookindex-css")
}

@section OptionalJs {
    @Scripts.Render("~/bundles/bookindex-js")
}